# slackware version
SLKVER="$(cat /etc/slackware-version |head -1)"
if [ "$SLKVER" = "Slackware 14.0" ]; then
  SLKUSYS="14.0"
elif [ "$SLKVER" = "Slackware 14.1" ]; then
  SLKUSYS="14.1"
elif [ "$SLKVER" = "Slackware 14.2" ]; then
  SLKUSYS="14.2"
else
  SLKUSYS="current"
fi
# installed slackware arch

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i586 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi
if [ "$ARCH" = "i586" ]; then
  SLARCH=""
elif [ "$ARCH" = "i686" ]; then
  SLARCH=""
elif [ "$ARCH" = "x86_64" ]; then
  SLARCH="64"
else
  SLKCFLAGS="-O2"
  SLARCH=""
fi

